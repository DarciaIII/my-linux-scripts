# ===============================
# üåà –£–õ–£–ß–®–ï–ù–ù–´–ô .bashrc (—Å ss –≤–º–µ—Å—Ç–æ netstat)
# ===============================

# ----- –ë–∞–∑–æ–≤—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ -----
# –ó–∞–≥—Ä—É–∂–∞–µ–º —Å–∏—Å—Ç–µ–º–Ω—ã–π bashrc, –µ—Å–ª–∏ –æ–Ω —Å—É—â–µ—Å—Ç–≤—É–µ—Ç
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# –í–∫–ª—é—á–∞–µ–º —Ü–≤–µ—Ç–Ω–æ–π –≤—ã–≤–æ–¥ –¥–ª—è ls, grep –∏ —Ç.–¥.
alias ls='ls --color=auto'     # –¶–≤–µ—Ç–Ω–æ–π –≤—ã–≤–æ–¥ —Ñ–∞–π–ª–æ–≤
alias grep='grep --color=auto' # –ü–æ–¥—Å–≤–µ—á–∏–≤–∞–µ—Ç —Å–æ–≤–ø–∞–¥–µ–Ω–∏—è
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# ----- –£–¥–æ–±–Ω—ã–µ –∞–ª–∏–∞—Å—ã -----
alias ll='ls -lh'         # –ü–æ–∫–∞–∑–∞—Ç—å —Ñ–∞–π–ª—ã —Å —Ä–∞–∑–º–µ—Ä–∞–º–∏ –≤ —á–∏—Ç–∞–µ–º–æ–º –≤–∏–¥–µ
alias la='ls -A'          # –ü–æ–∫–∞–∑–∞—Ç—å –≤—Å–µ —Ñ–∞–π–ª—ã, –≤–∫–ª—é—á–∞—è —Å–∫—Ä—ã—Ç—ã–µ
alias l='ls -CF'          # –ö–æ–º–ø–∞–∫—Ç–Ω—ã–π –≤—ã–≤–æ–¥ –ø–æ –∫–æ–ª–æ–Ω–∫–∞–º
alias ..='cd ..'          # –ü–µ—Ä–µ–π—Ç–∏ –Ω–∞ –æ–¥–∏–Ω —É—Ä–æ–≤–µ–Ω—å –≤—ã—à–µ
alias ...='cd ../..'      # –ü–µ—Ä–µ–π—Ç–∏ –Ω–∞ –¥–≤–∞ —É—Ä–æ–≤–Ω—è –≤—ã—à–µ
alias c='clear'           # –û—á–∏—Å—Ç–∏—Ç—å —ç–∫—Ä–∞–Ω
alias h='history'         # –ü–æ–∫–∞–∑–∞—Ç—å –∏—Å—Ç–æ—Ä–∏—é –∫–æ–º–∞–Ω–¥
alias cls='clear'         # –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–∞ clear
alias cp='cp -iv'         # –ö–æ–ø–∏—Ä–æ–≤–∞—Ç—å —Å –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ–º –∏ –ø–æ–∫–∞–∑–æ–º
alias mv='mv -iv'         # –ü–µ—Ä–µ–º–µ—â–∞—Ç—å —Å –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ–º –∏ –ø–æ–∫–∞–∑–æ–º
alias rm='rm -iv'         # –£–¥–∞–ª—è—Ç—å —Å –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏–µ–º –∏ –ø–æ–∫–∞–∑–æ–º
alias df='df -h'          # –ü–æ–∫–∞–∑–∞—Ç—å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –¥–∏—Å–∫–æ–≤ (—É–¥–æ–±–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç)
alias du='du -h'          # –ü–æ–∫–∞–∑–∞—Ç—å —Ä–∞–∑–º–µ—Ä –ø–∞–ø–æ–∫ (—É–¥–æ–±–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç)
alias free='free -h'      # –ü–∞–º—è—Ç—å –≤ —á–∏—Ç–∞–µ–º–æ–º –≤–∏–¥–µ

# ----- –°–µ—Ç—å -----
alias myip='curl ifconfig.me'         # –ü–æ–∫–∞–∑–∞—Ç—å –≤–Ω–µ—à–Ω–∏–π IP
alias pingg='ping 8.8.8.8'            # –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —Å–æ–µ–¥–∏–Ω–µ–Ω–∏–µ —Å Google DNS
alias ports='sudo ss -tulnp'          # –ü–æ–∫–∞–∑–∞—Ç—å –æ—Ç–∫—Ä—ã—Ç—ã–µ –ø–æ—Ä—Ç—ã –∏ –ø—Ä–æ—Ü–µ—Å—Å—ã
alias connections='ss -t -a'          # –ü–æ–∫–∞–∑–∞—Ç—å –≤—Å–µ TCP —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è
alias listen='ss -ltn'                # –ü–æ–∫–∞–∑–∞—Ç—å –≤—Å–µ —Å–ª—É—à–∞—é—â–∏–µ TCP –ø–æ—Ä—Ç—ã
alias udp='ss -lun'                   # –ü–æ–∫–∞–∑–∞—Ç—å –≤—Å–µ —Å–ª—É—à–∞—é—â–∏–µ UDP –ø–æ—Ä—Ç—ã
alias netstat='ss -tulnp'             # –ü—Ä–æ–∑—Ä–∞—á–Ω–∞—è –∑–∞–º–µ–Ω–∞ —Å—Ç–∞—Ä–æ–≥–æ netstat

# ----- Git -----
alias gst='git status'         # –ü—Ä–æ–≤–µ—Ä–∏—Ç—å —Å—Ç–∞—Ç—É—Å —Ä–µ–ø–æ–∑–∏—Ç–æ—Ä–∏—è
alias gpl='git pull'           # –°–∫–∞—á–∞—Ç—å –ø–æ—Å–ª–µ–¥–Ω–∏–µ –∏–∑–º–µ–Ω–µ–Ω–∏—è
alias gps='git push'           # –û—Ç–ø—Ä–∞–≤–∏—Ç—å –∫–æ–º–º–∏—Ç—ã –Ω–∞ —Å–µ—Ä–≤–µ—Ä
alias gcm='git commit -m'      # –°–æ–∑–¥–∞—Ç—å –∫–æ–º–º–∏—Ç —Å —Å–æ–æ–±—â–µ–Ω–∏–µ–º
alias gbr='git branch'         # –ü–æ–∫–∞–∑–∞—Ç—å –≤–µ—Ç–∫–∏
alias gco='git checkout'       # –ü–µ—Ä–µ–∫–ª—é—á–∏—Ç—å—Å—è –Ω–∞ –¥—Ä—É–≥—É—é –≤–µ—Ç–∫—É

# ----- –ù–∞–≤–∏–≥–∞—Ü–∏—è -----
alias dev='cd ~/projects'      # –ü–µ—Ä–µ—Ö–æ–¥ –≤ –∫–∞—Ç–∞–ª–æ–≥ –ø—Ä–æ–µ–∫—Ç–æ–≤
alias dl='cd ~/Downloads'      # –ü–µ—Ä–µ—Ö–æ–¥ –≤ –∫–∞—Ç–∞–ª–æ–≥ –∑–∞–≥—Ä—É–∑–æ–∫
alias docs='cd ~/Documents'    # –ü–µ—Ä–µ—Ö–æ–¥ –≤ –∫–∞—Ç–∞–ª–æ–≥ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤

# ----- –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Å–∏—Å—Ç–µ–º–µ -----
alias meminfo='free -m'        # –ü–∞–º—è—Ç—å –≤ –º–µ–≥–∞–±–∞–π—Ç–∞—Ö
alias cpuinfo='lscpu'          # –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–µ
alias disks='lsblk -f -e7'     # –°–ø–∏—Å–æ–∫ —Ä–µ–∞–ª—å–Ω—ã—Ö –¥–∏—Å–∫–æ–≤ –∏ –§–°
alias update='sudo apt update && sudo apt upgrade -y'  # –û–±–Ω–æ–≤–∏—Ç—å —Å–∏—Å—Ç–µ–º—É
alias cleanup='sudo apt autoremove -y && sudo apt clean' # –û—á–∏—Å—Ç–∏—Ç—å –∫—ç—à –∏ –º—É—Å–æ—Ä

# ----- –¶–≤–µ—Ç–Ω–æ–π prompt -----
# –ü—Ä–∏–º–µ—Ä: user@host:/–ø—É—Ç—å$
PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '

# ----- –ò—Å—Ç–æ—Ä–∏—è -----
HISTSIZE=5000                        # –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ –∫–æ–º–∞–Ω–¥ –≤ –∏—Å—Ç–æ—Ä–∏–∏
HISTCONTROL=ignoredups:erasedups     # –£–±–∏—Ä–∞–µ–º –¥—É–±–ª–∏–∫–∞—Ç—ã
shopt -s histappend                  # –î–æ–±–∞–≤–ª—è—Ç—å –≤ –∏—Å—Ç–æ—Ä–∏—é, –∞ –Ω–µ –ø–µ—Ä–µ–∑–∞–ø–∏—Å—ã–≤–∞—Ç—å
PROMPT_COMMAND="history -a; history -n; $PROMPT_COMMAND" # –ê–≤—Ç–æ—Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∏—Å—Ç–æ—Ä–∏–∏

# ----- –ê–≤—Ç–æ–¥–æ–ø–æ–ª–Ω–µ–Ω–∏–µ -----
# –í–∫–ª—é—á–∞–µ–º bash_completion, –µ—Å–ª–∏ –¥–æ—Å—Ç—É–ø–µ–Ω (–¥–ª—è git, ssh –∏ –¥—Ä.)
if [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
fi

# ----- –ü–æ–ª–µ–∑–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏ -----

# üßπ –û—á–∏—Å—Ç–∫–∞ —Å–∏—Å—Ç–µ–º—ã
cleanup_system() {
    echo "üßπ Cleaning system..."
    sudo apt autoremove -y
    sudo apt clean
    sudo journalctl --vacuum-time=3d
    echo "‚úÖ Done."
}

# üîç –ü–æ–∏—Å–∫ —Ñ–∞–π–ª–∞ –ø–æ –∏–º–µ–Ω–∏ (–ø—Ä–∏–º–µ—Ä: f config)
f() {
    find . -iname "*$1*"
}

# üì¶ –ü–æ–∫–∞–∑–∞—Ç—å 20 —Å–∞–º—ã—Ö –±–æ–ª—å—à–∏—Ö —Ñ–∞–π–ª–æ–≤/–ø–∞–ø–æ–∫
biggest() {
    du -ah . | sort -rh | head -n 20
}

# üïí –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ –ø—Ä–∏ –≤—Ö–æ–¥–µ
echo "–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å, $USER!"
echo "‚è∞ –°–µ–≥–æ–¥–Ω—è: $(date)"
echo "üìÇ –¢–µ–∫—É—â–∞—è –¥–∏—Ä–µ–∫—Ç–æ—Ä–∏—è: $(pwd)"
echo

